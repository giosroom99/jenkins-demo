pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git url: 'https://github.com/giosroom99/jenkins-demo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install dependencies
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                // Run tests
                sh 'npm test'
            }
        }
    }
    post {
        always {
            // Archive test results (if applicable)
            junit '**/target/test-*.xml'
        }
    }
}
