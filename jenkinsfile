pipeline {
    agent {
        docker {
            image 'my-node-app'
            args '-v /tmp:/tmp'  // Optional: mount volumes or pass additional arguments if needed
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/giosroom99/jenkins-demo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
    }

}
