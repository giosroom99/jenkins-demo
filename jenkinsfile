pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    docker.image('node:16').inside {
                        // Checkout the code from GitHub
                        git branch: 'main', url: 'https://github.com/giosroom99/jenkins-demo.git'
                    }
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    docker.image('node:16').inside {
                        // Install dependencies
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    docker.image('node:16').inside {
                        // Run tests
                        sh 'npm test'
                    }
                }
            }
        }
    }
}
